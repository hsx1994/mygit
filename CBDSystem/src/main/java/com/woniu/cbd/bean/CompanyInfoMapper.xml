<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="companyInfoMapper">
<!-- 查询所有企业信息 -->
	<select id="findAllCompany"  resultMap="map1">
		select * from t_company_info where c_delete=0
	</select>
	<!--模糊查询企业  -->
	<select id="fuzzyQuery" parameterType="String" resultMap="map1">
		select * from t_company_info 
		where 1=1
		 AND CONCAT(c_name,c_tel,c_address,c_contact) like "%" #{condition} "%"
		 AND c_delete=0
	</select>
	<resultMap type="CompanyInfoBean" id="map1">
		<id property="id" column="c_id"></id>
		<result property="comName" column="c_name"/>
		<result property="address" column="c_address"/>
		<result property="contact" column="c_contact"/>
		<result property="tel" column="c_tel"/>
		<result property="email" column="c_email"/>
	</resultMap>
	
</mapper>
